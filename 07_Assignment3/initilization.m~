function init = initilization(N, M, A)
%UNTITLED Summary of this function goes here
%   Detailed explanation goes here

% initialize \alpha and \beta
[beta, alpha] = find(A==1);
% initialize S_k
% initialize S cell array
I = [1:M];
S = {};

for k = 1:N
    S_k = [];
    U = I;
    while ~isempty(U)
        % randomly select a row
        i = datasample(U, 1);
        % select j
        while (1)
            j = datasample(alpha, 1);
            if isempty(intersect(beta(j), setdiff(I, U)))
                S_k = [S_k, j];
                U = setdiff(U, interset(i, beta))
                break;
            end
        end
        
        if ~isempty(j,[1:N])
            S_k = [S_k, j];
            U = setdiff(U, interset(i, beta))
        else
            U = setdiff(U, i)
        end
    end
    
end
end

